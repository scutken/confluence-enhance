{
  "name": "confluence-enhance",
  "version": "1.2.1",
  "description": "Confluence页面增强工具 - 包含Wiki Vditor单文件部署解决方案，内嵌Vditor，支持数学公式、Mermaid图表、代码高亮等功能",
  "main": "dist/wiki-vditor.min.js",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "bun scripts/build.js && terser dist/wiki-vditor.js -o dist/wiki-vditor.min.js --compress --mangle --source-map",
    "dev": "bun scripts/dev.js",
    "serve": "bun scripts/serve.js",
    "clean": "bun scripts/clean.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "test": "bun test --timeout 10000",
    "release": "bun run clean && bun run build && npm version patch && git push --follow-tags",
    "release:minor": "bun run clean && bun run build && npm version minor && git push --follow-tags",
    "release:major": "bun run clean && bun run build && npm version major && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scutken/confluence-enhance.git"
  },
  "keywords": [
    "confluence",
    "vditor",
    "markdown",
    "cdn",
    "jsdelivr",
    "enhancement",
    "toggle"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scutken/confluence-enhance/issues"
  },
  "homepage": "https://github.com/scutken/confluence-enhance#readme",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.45.0",
    "terser": "^5.19.0"
  },
  "peerDependencies": {
    "vditor": "^3.11.1"
  },
  "jsdelivr": "dist/wiki-vditor.min.js",
  "unpkg": "dist/wiki-vditor.min.js",
  "engines": {
    "node": ">=14.0.0"
  }
}
